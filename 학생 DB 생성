CREATE TABLE students (
    student_id INT PRIMARY KEY,  -- 학번을 주키로 사용
    name VARCHAR(100) NOT NULL,  -- 학생 이름
    password VARCHAR(255) NOT NULL,  -- 학생 비밀번호 (문자열로 수정)
    email VARCHAR(100),          -- 학생 이메일
    phone_number VARCHAR(15),    -- 학생 전화번호
    created_at DATETIME DEFAULT CURRENT_TIMESTAMP  -- 가입 날짜
);

//Insert 예시

